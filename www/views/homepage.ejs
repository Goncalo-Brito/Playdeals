<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="../styles/styles.css">
    <link rel="icon" type="image/x-icon" href="../images/Logo_PW.png">
</head>
<body>
    <%- include("../components/navbar.ejs") %>
    <section>
        <div class="navbar-space"></div>
        <div class="featured-game">
            <a>
                <img style="height: 25rem;" src="../images/games/6.png" alt="The binding of isaac Rebirth">
            </a>
            <h2>Comes with 3 DLC's!</h2>
            <div class="featured-dlc">
                <a>
                    <img src="../images/games/6_2_0.png" alt="The binding of isaac Afterbirth">
                </a>
                <a>
                    <img src="../images/games/6_3_0.png" alt="The binding of isaac Afterbirth+">
                </a>
                <a>
                    <img src="../images/games/6_4_0.png" alt="The binding of isaac Repentance">
                </a>
            </div>
        </div>
        <div class="container" style="margin-top: 1rem; width: 85rem;">
            <h2>Featured games</h2>
            <% let rowOpen = false; %>
            <% FeaturedGamesImagesPath.forEach((gameimage, index) => { %>
                <% if (index % 4 === 0) { %>
                    <% if (rowOpen) { %></div><% } %>
                    <div class="games-row">
                    <% rowOpen = true; %>
                <% } %>
                    <a href="/game_page/<%= gameimage.id %>">
                        <img class="pad-1-2 game-image" src="<%= gameimage.path %>">
                    </a>
                <% }); %>
            <% if (rowOpen) { %></div><% } %>
        </div>
    </section>
    <footer>
    </footer>
</body>
</html>