<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Games & DLC's</title>
    <link rel="stylesheet" href="../styles/styles.css">
    <link rel="icon" type="image/x-icon" href="../images/Logo_PW.png">
</head>
<body>
    <%- include("../components/navbar.ejs") %>
    <section>
        <div class="navbar-space"></div>
        <div class="container" style="margin-top: 1rem; width: 85rem;">
            <div class="horizontal-grid">
                <div class="grid-object-m">
                    <a class="button button-s" href="#games">Games</a>
                    <a class="button button-s" href="#dlcs">DLC's</a>
                    <a class="button button-s" href="#gift_cards">Gift Cards</a>
                </div>
                <div class="search-bar-div">
                    <input class="search-bar" type="text" placeholder="Search...">
                    <a class="search-bar-button"><svg xmlns="http:/www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/></svg></a>        
                </div>
            </div>
        </div>
        <div class="container" style="margin-top: 1rem; width: 85rem;">
            <h1 id="games">Games</h1>
            <% let rowOpen = false; %>
            <% gameimagesPath.forEach((gameimage, index) => { %>
                <% if (index % 4 === 0) { %>
                    <% if (rowOpen) { %></div><% } %>
                    <div class="games-row">
                    <% rowOpen = true; %>
                <% } %>
                    <a href="/game_page/<%= gameimage.id %>">
                        <img class="pad-1-2 game-image" src="<%= gameimage.path %>">
                    </a>
                <% }); %>
            <% if (rowOpen) { %></div><% } %>
        </div>
        <div class="container" style="margin-top: 1rem; width: 85rem;">
            <h1 id="dlcs">DLC's</h1>
            <% let rowOpenDlc = false; %>
            <% dlcimagesPath.forEach((dlcimage, index) => { %>
                <% if (index % 4 === 0) { %>
                    <% if (rowOpenDlc) { %></div><% } %>
                    <div class="games-row">
                    <% rowOpenDlc = true; %>
                <% } %>
                    <a href="/dlc_page/<%= dlcimage.id %>">
                        <img class="pad-1-2 game-image" src="<%= dlcimage.path %>">
                    </a>
                <% }); %>
            <% if (rowOpenDlc) { %></div><% } %>
        </div>
        <div class="container" style="margin-top: 1rem; width: 85rem;">
            <h1 id="gift_cards">Gift Cards</h1>
            <% let rowOpenAuctions = false; %>
            <% giftcardsPath.forEach((giftcard, index) => { %>
                <% if (index % 4 === 0) { %>
                    <% if (rowOpenAuctions) { %></div><% } %>
                    <div class="games-row">
                    <% rowOpenAuctions = true; %>
                <% } %>
                    <a href="/gift_card_page/<%= giftcard.id %>">
                        <img class="pad-1-2 game-image" src="<%= giftcard.path %>">
                    </a>
                <% }); %>
            <% if (rowOpenDlc) { %></div><% } %>
        </div>
    </section>
    <footer>
        <script src="../scripts/toggleTables.js"></script>
    </footer>
</body>
</html> 